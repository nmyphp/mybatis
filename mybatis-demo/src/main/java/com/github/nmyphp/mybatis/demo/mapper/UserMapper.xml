<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.nmyphp.mybatis.demo.mapper.UserMapper">
    <resultMap id="usermap" type="com.github.nmyphp.mybatis.demo.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="find" resultMap="usermap">
		select * from user
		where id=#{id}
	</select>

    <insert id="insert">
	    insert into user (id, name) values (
	    	#{id}, #{name}
	    )
	</insert>
</mapper>